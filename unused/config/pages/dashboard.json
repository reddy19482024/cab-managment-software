{
    "page": {
      "id": "dashboard",
      "path": "/dashboard",
      "layout": "default",
      "meta": {
        "title": "Dashboard - Employee Transport",
        "description": "Transport management dashboard and analytics",
        "public": false,
        "roles": ["admin", "employee"]
      },
      "components": {
        "pageHeader": {
          "extends": "patterns.PageHeader",
          "config": {
            "title": "Dashboard",
            "subtitle": "${currentDate}",
            "breadcrumb": [
              {
                "label": "Dashboard"
              }
            ],
            "actions": {
              "extends": "patterns.ActionBar",
              "items": [
                {
                  "extends": "base.DatePicker",
                  "variant": "range",
                  "props": {
                    "size": "default",
                    "defaultValue": "today",
                    "onChange": "updateDateRange"
                  }
                }
              ]
            }
          }
        },
        "stats": {
          "extends": "data.StatsGrid",
          "config": {
            "gutter": "${theme.spacing.md}",
            "responsive": {
              "xs": 1,
              "sm": 2,
              "md": 4
            },
            "items": [
              {
                "extends": "data.StatsCard",
                "props": {
                  "id": "totalEmployees",
                  "title": "Total Employees",
                  "icon": "TeamOutlined",
                  "color": "${theme.colors.primary}",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/dashboard/stats/employees",
                    "format": "number"
                  },
                  "loading": {
                    "type": "skeleton",
                    "active": true
                  }
                }
              },
              {
                "extends": "data.StatsCard",
                "props": {
                  "id": "activeRoutes",
                  "title": "Active Routes",
                  "icon": "RouteOutlined",
                  "color": "${theme.colors.success}",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/dashboard/stats/routes",
                    "format": "number"
                  }
                }
              },
              {
                "extends": "data.StatsCard",
                "props": {
                  "id": "activeVehicles",
                  "title": "Active Vehicles",
                  "icon": "CarOutlined",
                  "color": "${theme.colors.warning}",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/dashboard/stats/vehicles",
                    "format": "number"
                  }
                }
              },
              {
                "extends": "data.StatsCard",
                "props": {
                  "id": "todayTrips",
                  "title": "Today's Trips",
                  "icon": "ClockCircleOutlined",
                  "color": "${theme.colors.info}",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/dashboard/stats/trips",
                    "format": "number"
                  }
                }
              }
            ]
          }
        },
        "mainGrid": {
          "extends": "layout.Grid",
          "config": {
            "gutter": "${theme.spacing.lg}",
            "sections": [
              {
                "extends": "custom.RouteMap",
                "span": 16,
                "props": {
                  "title": "Live Tracking",
                  "height": "400px",
                  "realtime": {
                    "enabled": true,
                    "interval": 30
                  },
                  "controls": {
                    "zoom": true,
                    "fullscreen": true
                  },
                  "layers": [
                    {
                      "type": "vehicles",
                      "label": "Active Vehicles",
                      "dataSource": {
                        "type": "api",
                        "endpoint": "/dashboard/tracking/vehicles",
                        "realtime": true
                      }
                    },
                    {
                      "type": "routes",
                      "label": "Active Routes",
                      "dataSource": {
                        "type": "api",
                        "endpoint": "/dashboard/tracking/routes",
                        "realtime": true
                      }
                    }
                  ],
                  "legend": {
                    "position": "bottomright",
                    "items": [
                      {
                        "label": "On Time",
                        "color": "${theme.colors.success}"
                      },
                      {
                        "label": "Delayed",
                        "color": "${theme.colors.warning}"
                      },
                      {
                        "label": "Stopped",
                        "color": "${theme.colors.error}"
                      }
                    ]
                  }
                }
              },
              {
                "extends": "base.Table",
                "span": 8,
                "props": {
                  "title": "Today's Trips",
                  "height": "400px",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/dashboard/trips/today",
                    "realtime": {
                      "enabled": true,
                      "interval": 60
                    }
                  },
                  "filters": {
                    "status": ["scheduled", "in-progress"]
                  },
                  "columns": [
                    {
                      "title": "Route",
                      "dataIndex": "routeName",
                      "render": {
                        "component": "display.Link",
                        "props": {
                          "href": "/routes/:id"
                        }
                      }
                    },
                    {
                      "title": "Time",
                      "dataIndex": "startTime",
                      "render": {
                        "component": "display.Time",
                        "props": {
                          "format": "HH:mm"
                        }
                      }
                    },
                    {
                      "title": "Status",
                      "dataIndex": "status",
                      "render": {
                        "component": "display.StatusBadge"
                      }
                    }
                  ]
                }
              }
            ]
          }
        },
        "analytics": {
          "extends": "layout.Grid",
          "config": {
            "gutter": "${theme.spacing.lg}",
            "sections": [
              {
                "extends": "data.Chart",
                "span": 12,
                "props": {
                  "title": "Trip Statistics",
                  "type": "line",
                  "height": "300px",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/dashboard/analytics/trips"
                  },
                  "config": {
                    "xAxis": {
                      "dataKey": "date",
                      "type": "time"
                    },
                    "series": [
                      {
                        "name": "Total Trips",
                        "dataKey": "totalTrips",
                        "color": "${theme.colors.primary}"
                      },
                      {
                        "name": "On Time",
                        "dataKey": "onTimeTrips",
                        "color": "${theme.colors.success}"
                      },
                      {
                        "name": "Delayed",
                        "dataKey": "delayedTrips",
                        "color": "${theme.colors.warning}"
                      }
                    ]
                  }
                }
              },
              {
                "extends": "data.Chart",
                "span": 12,
                "props": {
                  "title": "Attendance Overview",
                  "type": "bar",
                  "height": "300px",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/dashboard/analytics/attendance"
                  },
                  "config": {
                    "xAxis": {
                      "dataKey": "date",
                      "type": "time"
                    },
                    "series": [
                      {
                        "name": "Present",
                        "dataKey": "present",
                        "color": "${theme.colors.success}"
                      },
                      {
                        "name": "Absent",
                        "dataKey": "absent",
                        "color": "${theme.colors.error}"
                      },
                      {
                        "name": "Late",
                        "dataKey": "late",
                        "color": "${theme.colors.warning}"
                      }
                    ]
                  }
                }
              }
            ]
          }
        }
      },
      "hooks": {
        "useDashboard": {
          "features": [
            "realtime",
            "dateRange",
            "refresh"
          ],
          "actions": {
            "updateDateRange": {
              "targets": ["stats", "analytics"],
              "type": "reload"
            },
            "startRealtime": {
              "targets": ["liveMap", "tripsList"],
              "interval": 30
            }
          }
        }
      },
      "api": {
        "stats": {
          "endpoint": "/dashboard/stats",
          "method": "GET",
          "params": {
            "startDate": "date",
            "endDate": "date"
          }
        },
        "tracking": {
          "endpoint": "/dashboard/tracking",
          "method": "GET",
          "realtime": true
        },
        "analytics": {
          "endpoint": "/dashboard/analytics",
          "method": "GET",
          "params": {
            "startDate": "date",
            "endDate": "date",
            "type": "string"
          }
        }
      },
      "styles": {
        "pageContainer": {
          "padding": "${theme.spacing.layout.containerPadding}",
          "backgroundColor": "${theme.colors.background.default}"
        },
        "section": {
          "marginBottom": "${theme.spacing.lg}"
        }
      }
    }
  }