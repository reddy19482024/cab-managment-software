{
    "page": {
      "id": "employees-list",
      "path": "/employees",
      "layout": "default",
      "meta": {
        "title": "Employees - Employee Transport",
        "description": "Manage employee information",
        "public": false,
        "roles": ["admin"]
      },
      "components": {
        "pageHeader": {
          "extends": "patterns.PageHeader",
          "config": {
            "title": "Employees",
            "subtitle": "Manage employee information and transport details",
            "breadcrumb": [
              {
                "label": "Dashboard",
                "path": "/dashboard"
              },
              {
                "label": "Employees"
              }
            ],
            "actions": {
              "extends": "patterns.ActionBar",
              "items": [
                {
                  "extends": "base.Button",
                  "variant": "primary",
                  "props": {
                    "label": "Add Employee",
                    "icon": "UserPlusOutlined",
                    "action": "openCreateModal"
                  }
                }
              ]
            }
          }
        },
        "filters": {
          "extends": "patterns.FilterPanel",
          "config": {
            "collapsed": false,
            "layout": {
              "gutter": "${theme.spacing.md}",
              "columns": 24
            },
            "fields": [
              {
                "extends": "base.Form.Input",
                "name": "search",
                "colSpan": 8,
                "props": {
                  "label": "Search",
                  "placeholder": "Search by ID, name or department",
                  "prefix": {
                    "icon": "SearchOutlined"
                  },
                  "allowClear": true
                }
              },
              {
                "extends": "base.Form.Select",
                "name": "department",
                "colSpan": 4,
                "props": {
                  "label": "Department",
                  "placeholder": "Select department",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/departments",
                    "labelField": "name",
                    "valueField": "id"
                  }
                }
              },
              {
                "extends": "base.Form.Select",
                "name": "status",
                "colSpan": 4,
                "props": {
                  "label": "Status",
                  "placeholder": "Select status",
                  "options": [
                    {
                      "label": "Active",
                      "value": "active"
                    },
                    {
                      "label": "Inactive",
                      "value": "inactive"
                    }
                  ]
                }
              },
              {
                "extends": "base.Form.Select",
                "name": "route",
                "colSpan": 4,
                "props": {
                  "label": "Route",
                  "placeholder": "Select route",
                  "dataSource": {
                    "type": "api",
                    "endpoint": "/routes",
                    "labelField": "routeName",
                    "valueField": "id"
                  }
                }
              }
            ],
            "actions": [
              {
                "type": "reset",
                "label": "Reset"
              },
              {
                "type": "apply",
                "label": "Apply",
                "variant": "primary"
              }
            ]
          }
        },
        "table": {
          "extends": "base.Table",
          "config": {
            "rowKey": "id",
            "dataSource": {
              "type": "api",
              "endpoint": "/employees",
              "params": {
                "page": "number",
                "limit": "number",
                "search": "string",
                "department": "string",
                "route": "string",
                "status": "string"
              }
            },
            "features": {
              "selection": true,
              "pagination": true,
              "sorting": true,
              "filtering": true
            },
            "columns": [
              {
                "title": "Employee ID",
                "dataIndex": "employeeId",
                "width": 120,
                "fixed": "left",
                "sorter": true,
                "search": true
              },
              {
                "title": "Name",
                "dataIndex": "name",
                "width": 200,
                "sorter": true,
                "render": {
                  "component": "display.NameWithAvatar",
                  "props": {
                    "avatarField": "avatar",
                    "nameField": "name"
                  }
                }
              },
              {
                "title": "Department",
                "dataIndex": "department",
                "width": 150,
                "filters": {
                  "source": "api://departments"
                }
              },
              {
                "title": "Contact",
                "dataIndex": "contact",
                "width": 200,
                "render": {
                  "component": "display.ContactInfo",
                  "props": {
                    "emailField": "email",
                    "phoneField": "phone"
                  }
                }
              },
              {
                "title": "Route",
                "dataIndex": "routeName",
                "width": 150,
                "render": {
                  "component": "display.Link",
                  "props": {
                    "href": "/routes/:routeId"
                  }
                }
              },
              {
                "title": "Status",
                "dataIndex": "status",
                "width": 100,
                "render": {
                  "component": "display.StatusBadge",
                  "props": {
                    "variants": {
                      "active": {
                        "color": "success"
                      },
                      "inactive": {
                        "color": "error"
                      }
                    }
                  }
                }
              },
              {
                "title": "Actions",
                "fixed": "right",
                "width": 150,
                "render": {
                  "component": "display.ActionButtons",
                  "items": [
                    {
                      "icon": "EditOutlined",
                      "tooltip": "Edit",
                      "action": "editEmployee"
                    },
                    {
                      "icon": "DeleteOutlined",
                      "tooltip": "Delete",
                      "action": "deleteEmployee",
                      "danger": true,
                      "confirm": {
                        "title": "Delete Employee",
                        "message": "Are you sure you want to delete this employee?"
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      },
      "modals": {
        "employeeForm": {
          "extends": "feedback.Modal",
          "variant": "form",
          "config": {
            "title": "${mode} Employee",
            "width": 800,
            "form": {
              "extends": "base.Form",
              "layout": "vertical",
              "sections": [
                {
                  "title": "Basic Information",
                  "fields": [
                    {
                      "extends": "base.Form.Input",
                      "name": "employeeId",
                      "props": {
                        "label": "Employee ID",
                        "required": true,
                        "disabled": "${mode === 'Edit'}"
                      }
                    },
                    {
                      "extends": "base.Form.Input",
                      "name": "name",
                      "props": {
                        "label": "Full Name",
                        "required": true
                      }
                    },
                    {
                      "extends": "base.Form.Input",
                      "name": "email",
                      "props": {
                        "label": "Email",
                        "type": "email",
                        "required": true
                      }
                    },
                    {
                      "extends": "base.Form.Select",
                      "name": "department",
                      "props": {
                        "label": "Department",
                        "required": true,
                        "dataSource": {
                          "type": "api",
                          "endpoint": "/departments"
                        }
                      }
                    }
                  ]
                },
                {
                  "title": "Transport Details",
                  "fields": [
                    {
                      "extends": "custom.LocationPicker",
                      "name": "pickupAddress",
                      "props": {
                        "label": "Pickup Address",
                        "required": true,
                        "searchable": true,
                        "height": 200
                      }
                    },
                    {
                      "extends": "base.Form.Select",
                      "name": "routeId",
                      "props": {
                        "label": "Assign Route",
                        "dataSource": {
                          "type": "api",
                          "endpoint": "/routes"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      },
      "hooks": {
        "useTable": {
          "features": [
            "pagination",
            "sorting",
            "filtering",
            "selection",
            "refresh"
          ],
          "dataSource": "api.list"
        },
        "useForm": {
          "features": [
            "validation",
            "submission",
            "reset"
          ],
          "submit": {
            "api": "${mode === 'Create' ? 'api.create' : 'api.update'}"
          }
        }
      },
      "styles": {
        "pageContainer": {
          "padding": "${theme.spacing.layout.containerPadding}",
          "backgroundColor": "${theme.colors.background.default}"
        },
        "section": {
          "marginBottom": "${theme.spacing.lg}"
        }
      }
    }
  }