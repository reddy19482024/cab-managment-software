{
  "Vehicle": {
    "endpoints": {
      "create": {
        "path": "/api/vehicles",
        "method": "POST",
        "route_type": "private",
        "description": "Add a new vehicle to the fleet",
        "request_payload": {
          "registration_number": "string",
          "brand": "string",
          "model": "string",
          "status": "string",
          "seats": "integer"
        },
        "response": {
          "vehicle_id": "uuid-generated-id",
          "registration_number": "ABC1234",
          "brand": "Toyota",
          "model": "Camry",
          "status": "available",
          "seats": 4,
          "created_at": "timestamp"
        }
      },
      "read": {
        "path": "/api/vehicles/{vehicle_id}",
        "method": "GET",
        "route_type": "private",
        "description": "Retrieve details of a specific vehicle by ID",
        "response": {
          "vehicle_id": "uuid-vehicle-id",
          "registration_number": "ABC1234",
          "brand": "Toyota",
          "model": "Camry",
          "status": "available",
          "seats": 4,
          "created_at": "timestamp"
        }
      },
      "update": {
        "path": "/api/vehicles/{vehicle_id}",
        "method": "PUT",
        "route_type": "private",
        "description": "Update an existing vehicle",
        "request_payload": {
          "registration_number": "string",
          "brand": "string",
          "model": "string",
          "status": "string",
          "seats": "integer"
        },
        "response": {
          "vehicle_id": "uuid-vehicle-id",
          "registration_number": "ABC1234",
          "brand": "Toyota",
          "model": "Camry",
          "status": "maintenance",
          "seats": 5,
          "updated_at": "timestamp"
        }
      },
      "delete": {
        "path": "/api/vehicles/{vehicle_id}",
        "method": "DELETE",
        "route_type": "private",
        "description": "Delete a vehicle by ID",
        "response": {
          "message": "Vehicle deleted successfully",
          "vehicle_id": "uuid-vehicle-id"
        }
      },
      "list": {
        "path": "/api/vehicles",
        "method": "GET",
        "route_type": "private",
        "description": "List all vehicles with filtering options",
        "params": {
          "search": "registration_number, brand, model",
          "sort": "status, seats",
          "filter": "status",
          "page": {
            "type": "integer",
            "description": "Page number (starts from 1)",
            "default": 1
          },
          "limit": {
            "type": "integer",
            "description": "Number of records per page",
            "default": 10,
            "max": 100
          },
          "sort_by": {
            "type": "string",
            "enum": ["registration_number", "status", "created_at"],
            "default": "registration_number"
          },
          "sort_order": {
            "type": "string",
            "enum": ["asc", "desc"],
            "default": "asc"
          }
        },
        "response": [
          {
            "vehicle_id": "uuid-1",
            "registration_number": "ABC1234",
            "brand": "Toyota",
            "model": "Camry",
            "status": "available",
            "seats": 4,
            "created_at": "2024-11-17T09:00:00Z"
          },
          {
            "vehicle_id": "uuid-2",
            "registration_number": "DEF5678",
            "brand": "Honda",
            "model": "Civic",
            "status": "maintenance",
            "seats": 5,
            "created_at": "2024-11-17T09:00:00Z"
          }
        ]
      }
    }
  }
}
