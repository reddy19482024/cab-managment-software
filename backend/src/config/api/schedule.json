        "description": "Create a new schedule/shift timing",
        "request_payload": {
          "name": "Morning Shift",
          "start_time": "09:00:00",
          "end_time": "17:00:00",
          "status": "active"
        },
        "response": {
          "schedule_id": "uuid-generated-id",
          "name": "Morning Shift",
          "start_time": "09:00:00",
          "end_time": "17:00:00",
          "status": "active",
          "created_at": "2024-11-17T09:00:00Z",
          "updated_at": "2024-11-17T09:00:00Z"
        }
      },
      "read": {
        "path": "/api/schedules/{schedule_id}",
        "method": "GET",
        "route_type": "private",
        "description": "Retrieve details of a specific schedule by ID",
        "response": {
          "schedule_id": "uuid-schedule-id",
          "name": "Morning Shift",
          "start_time": "09:00:00",
          "end_time": "17:00:00",
          "status": "active",
