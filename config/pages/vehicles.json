{
    "page": {
      "id": "vehicles-list",
      "path": "/vehicles",
      "layout": "default",
      "meta": {
        "title": "Vehicles - Employee Transport",
        "description": "Manage transport vehicles",
        "public": false,
        "roles": ["admin"]
      },
      "components": {
        "pageHeader": {
          "extends": "patterns.PageHeader",
          "config": {
            "title": "Vehicles",
            "subtitle": "Manage transport vehicles and maintenance",
            "breadcrumb": [
              {
                "label": "Dashboard",
                "path": "/dashboard"
              },
              {
                "label": "Vehicles"
              }
            ],
            "actions": {
              "extends": "patterns.ActionBar",
              "items": [
                {
                  "extends": "base.Button",
                  "variant": "primary",
                  "props": {
                    "label": "Add Vehicle",
                    "icon": "PlusOutlined",
                    "action": "openCreateModal"
                  }
                }
              ]
            }
          }
        },
        "filters": {
          "extends": "patterns.FilterPanel",
          "config": {
            "collapsed": false,
            "layout": {
              "gutter": "${theme.spacing.md}",
              "columns": 24
            },
            "fields": [
              {
                "extends": "base.Form.Input",
                "name": "search",
                "colSpan": 8,
                "props": {
                  "label": "Search",
                  "placeholder": "Search by vehicle number",
                  "prefix": {
                    "icon": "SearchOutlined"
                  },
                  "allowClear": true
                }
              },
              {
                "extends": "base.Form.Select",
                "name": "type",
                "colSpan": 4,
                "props": {
                  "label": "Vehicle Type",
                  "placeholder": "Select type",
                  "options": [
                    {
                      "label": "Bus",
                      "value": "bus"
                    },
                    {
                      "label": "Van",
                      "value": "van"
                    },
                    {
                      "label": "Car",
                      "value": "car"
                    }
                  ]
                }
              },
              {
                "extends": "base.Form.Select",
                "name": "status",
                "colSpan": 4,
                "props": {
                  "label": "Status",
                  "placeholder": "Select status",
                  "options": [
                    {
                      "label": "Active",
                      "value": "active"
                    },
                    {
                      "label": "Maintenance",
                      "value": "maintenance"
                    },
                    {
                      "label": "Inactive",
                      "value": "inactive"
                    }
                  ]
                }
              }
            ]
          }
        },
        "table": {
          "extends": "base.Table",
          "config": {
            "rowKey": "id",
            "dataSource": {
              "type": "api",
              "endpoint": "/vehicles",
              "params": {
                "page": "number",
                "limit": "number",
                "search": "string",
                "type": "string",
                "status": "string"
              }
            },
            "features": {
              "selection": true,
              "pagination": true,
              "sorting": true,
              "filtering": true
            },
            "columns": [
              {
                "title": "Vehicle Number",
                "dataIndex": "vehicleNumber",
                "width": 150,
                "fixed": "left",
                "sorter": true,
                "search": true
              },
              {
                "title": "Type",
                "dataIndex": "type",
                "width": 120,
                "filters": true,
                "render": {
                  "component": "display.VehicleType",
                  "props": {
                    "variants": {
                      "bus": { "color": "blue" },
                      "van": { "color": "green" },
                      "car": { "color": "purple" }
                    }
                  }
                }
              },
              {
                "title": "Capacity",
                "dataIndex": "capacity",
                "width": 120,
                "sorter": true
              },
              {
                "title": "Current Route",
                "dataIndex": "routeName",
                "width": 200,
                "render": {
                  "component": "display.Link",
                  "props": {
                    "href": "/routes/:routeId"
                  }
                }
              },
              {
                "title": "Status",
                "dataIndex": "status",
                "width": 120,
                "filters": true,
                "render": {
                  "component": "display.StatusBadge",
                  "props": {
                    "variants": {
                      "active": { "color": "success" },
                      "maintenance": { "color": "warning" },
                      "inactive": { "color": "error" }
                    }
                  }
                }
              },
              {
                "title": "Actions",
                "fixed": "right",
                "width": 200,
                "render": {
                  "component": "display.ActionButtons",
                  "items": [
                    {
                      "icon": "EditOutlined",
                      "tooltip": "Edit",
                      "action": "editVehicle"
                    },
                    {
                      "icon": "ToolOutlined",
                      "tooltip": "Maintenance",
                      "action": "openMaintenanceModal"
                    },
                    {
                      "icon": "DeleteOutlined",
                      "tooltip": "Delete",
                      "action": "deleteVehicle",
                      "danger": true
                    }
                  ]
                }
              }
            ]
          }
        }
      },
      "modals": {
        "vehicleForm": {
          "extends": "feedback.Modal",
          "variant": "form",
          "config": {
            "title": "${mode} Vehicle",
            "width": 600,
            "form": {
              "extends": "base.Form",
              "layout": "vertical",
              "sections": [
                {
                  "title": "Vehicle Details",
                  "fields": [
                    {
                      "extends": "base.Form.Input",
                      "name": "vehicleNumber",
                      "props": {
                        "label": "Vehicle Number",
                        "required": true,
                        "disabled": "${mode === 'Edit'}"
                      }
                    },
                    {
                      "extends": "base.Form.Select",
                      "name": "type",
                      "props": {
                        "label": "Vehicle Type",
                        "required": true,
                        "options": [
                          {
                            "label": "Bus",
                            "value": "bus"
                          },
                          {
                            "label": "Van",
                            "value": "van"
                          },
                          {
                            "label": "Car",
                            "value": "car"
                          }
                        ]
                      }
                    },
                    {
                      "extends": "base.Form.InputNumber",
                      "name": "capacity",
                      "props": {
                        "label": "Seating Capacity",
                        "required": true,
                        "min": 1
                      }
                    },
                    {
                      "extends": "base.Form.Select",
                      "name": "status",
                      "props": {
                        "label": "Status",
                        "options": [
                          {
                            "label": "Active",
                            "value": "active"
                          },
                          {
                            "label": "Inactive",
                            "value": "inactive"
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            }
          }
        },
        "maintenanceForm": {
          "extends": "feedback.Modal",
          "variant": "form",
          "config": {
            "title": "Schedule Maintenance",
            "width": 500,
            "form": {
              "extends": "base.Form",
              "layout": "vertical",
              "fields": [
                {
                  "extends": "base.Form.DatePicker",
                  "name": "startDate",
                  "props": {
                    "label": "Start Date",
                    "required": true
                  }
                },
                {
                  "extends": "base.Form.DatePicker",
                  "name": "endDate",
                  "props": {
                    "label": "Expected End Date",
                    "required": true
                  }
                },
                {
                  "extends": "base.Form.TextArea",
                  "name": "reason",
                  "props": {
                    "label": "Maintenance Reason",
                    "required": true,
                    "rows": 4
                  }
                }
              ]
            }
          }
        }
      },
      "hooks": {
        "useTable": {
          "features": [
            "pagination",
            "sorting",
            "filtering",
            "selection"
          ],
          "dataSource": "api.list"
        },
        "useForm": {
          "features": [
            "validation",
            "submission",
            "reset"
          ]
        }
      },
      "api": {
        "list": {
          "endpoint": "/vehicles",
          "method": "GET",
          "params": {
            "page": "number",
            "limit": "number",
            "search": "string",
            "type": "string",
            "status": "string"
          }
        },
        "create": {
          "endpoint": "/vehicles",
          "method": "POST"
        },
        "update": {
          "endpoint": "/vehicles/:id",
          "method": "PUT"
        },
        "delete": {
          "endpoint": "/vehicles/:id",
          "method": "DELETE"
        },
        "maintenance": {
          "endpoint": "/vehicles/:id/maintenance",
          "method": "POST"
        }
      },
      "actions": {
        "openCreateModal": {
          "type": "modal",
          "target": "vehicleForm",
          "data": {
            "mode": "Create"
          }
        },
        "editVehicle": {
          "type": "modal",
          "target": "vehicleForm",
          "data": {
            "mode": "Edit"
          }
        },
        "deleteVehicle": {
          "type": "confirm",
          "title": "Delete Vehicle",
          "message": "Are you sure you want to delete this vehicle?",
          "onConfirm": {
            "type": "api",
            "target": "delete",
            "onSuccess": {
              "type": "notification",
              "message": "Vehicle deleted successfully",
              "action": "reloadTable"
            }
          }
        },
        "openMaintenanceModal": {
          "type": "modal",
          "target": "maintenanceForm",
          "onConfirm": {
            "type": "api",
            "target": "maintenance",
            "onSuccess": {
              "type": "notification",
              "message": "Maintenance scheduled successfully",
              "action": "reloadTable"
            }
          }
        }
      }
    }
  }