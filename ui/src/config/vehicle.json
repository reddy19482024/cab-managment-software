{
  "title": "Vehicle Management",
  "layout": {
    "header": {
      "enabled": true,
      "logo": "/images/company-logo.png",
      "style": {
        "background": "#fff",
        "padding": "0 24px",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)",
        "height": "64px",
        "lineHeight": "64px"
      }
    },
    "sidebar": {
      "enabled": true,
      "collapsed": false,
      "width": 256,
      "collapsedWidth": 80,
      "theme": "dark",
      "style": {
        "background": "#001529",
        "boxShadow": "2px 0 8px 0 rgba(29,35,41,.05)"
      },
      "menu": {
        "items": [
          { "key": "dashboard", "label": "Dashboard", "icon": "DashboardOutlined", "path": "/dashboard" },
          {
            "type": "group",
            "label": "Management",
            "children": [
              { "key": "employees", "label": "Employees", "icon": "UserOutlined", "path": "/employees" },
              { "key": "drivers", "label": "Drivers", "icon": "IdcardOutlined", "path": "/drivers" },
              { "key": "vehicles", "label": "Vehicles", "icon": "CarOutlined", "path": "/vehicles" },
              { "key": "trips", "label": "Trips", "icon": "CompassOutlined", "path": "/trips" }
            ]
          },
          {
            "type": "group",
            "label": "Reports",
            "children": [
              { "key": "reports", "label": "Reports", "icon": "BarChartOutlined", "path": "/reports" },
              { "key": "expenses", "label": "Expenses", "icon": "DollarOutlined", "path": "/expenses" },
              { "key": "maintenance", "label": "Maintenance", "icon": "ToolOutlined", "path": "/maintenance" }
            ]
          }
        ]
      },
      "footer": {
        "enabled": true,
        "style": {
          "padding": "16px",
          "background": "rgba(0, 0, 0, 0.25)",
          "color": "#fff",
          "height": "auto",
          "cursor": "pointer"
        },
        "content": {
          "expanded": { 
            "avatar": "/images/user-avatar.png", 
            "name": "John Doe", 
            "role": "Admin" 
          },
          "collapsed": { 
            "avatar": "/images/user-avatar.png" 
          },
          "menu": {
            "items": [
              { "key": "profile", "label": "Profile", "icon": "UserOutlined", "path": "/profile" },
              { "key": "settings", "label": "Settings", "icon": "SettingOutlined", "path": "/settings" },
              { "key": "logout", "label": "Logout", "icon": "LogoutOutlined", "type": "button" }
            ]
          }
        }
      }
    },
    "content": {
      "style": {
        "minHeight": "calc(100vh - 64px)",
        "background": "#f0f2f5"
      }
    },
    "footer": {
      "enabled": true,
      "text": "Â© 2024 My Application. All rights reserved.",
      "style": {
        "textAlign": "center",
        "padding": "16px",
        "background": "#f7f7f7"
      },
      "links": [
        { "text": "Privacy Policy", "url": "/privacy" },
        { "text": "Terms", "url": "/terms" }
      ]
    }
  },
  "sections": [
    {
      "type": "banner",
      "style": {
        "background": "#1890ff",
        "padding": "24px",
        "marginBottom": "24px"
      },
      "content": {
        "title": "Vehicle Management",
        "description": "Manage your organization's vehicle fleet",
        "style": {
          "maxWidth": "100%",
          "padding": "0 24px"
        }
      }
    },
    {
      "type": "form",
      "containerStyle": {
        "padding": "0 24px"
      },
      "wrapperStyle": {
        "background": "#ffffff",
        "padding": "24px",
        "borderRadius": "8px",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)"
      },
      "title": "Vehicle List",
      "subtitle": "View and manage vehicles",
      "layout": {
        "type": "vertical"
      },
      "table": {
        "enabled": true,
        "columns": [
          { 
            "title": "Registration Number", 
            "dataIndex": "registration_number", 
            "key": "registration_number",
            "width": "20%"
          },
          { 
            "title": "Brand", 
            "dataIndex": "brand", 
            "key": "brand",
            "width": "15%"
          },
          { 
            "title": "Model", 
            "dataIndex": "model", 
            "key": "model",
            "width": "15%"
          },
          { 
            "title": "Status", 
            "dataIndex": "status", 
            "key": "status",
            "width": "15%",
            "render": {
              "type": "tag",
              "colorMap": {
                "available": "green",
                "in_use": "blue",
                "maintenance": "orange"
              }
            }
          },
          { 
            "title": "Seats", 
            "dataIndex": "seats", 
            "key": "seats",
            "width": "15%"
          },
          {
            "title": "Actions",
            "key": "actions",
            "width": "20%",
            "render": {
              "type": "actions",
              "items": [
                {
                  "type": "button",
                  "buttonProps": {
                    "type": "link",
                    "icon": "EditOutlined"
                  },
                  "onClick": {
                    "type": "modal",
                    "modalId": "editVehicleModal"
                  }
                },
                {
                  "type": "button",
                  "buttonProps": {
                    "type": "link",
                    "danger": true,
                    "icon": "DeleteOutlined"
                  },
                  "onClick": {
                    "type": "modal",
                    "modalId": "deleteVehicleModal"
                  }
                }
              ]
            }
          }
        ],
        "api": {
          "endpoint": "/api/vehicles",
          "method": "GET",
          "route_type": "private",
          "transform": {
            "path": "data"
          }
        }
      },
      "actions": [
        {
          "label": "Add Vehicle",
          "buttonProps": {
            "type": "primary",
            "icon": "PlusOutlined"
          },
          "style": {
            "marginBottom": "16px"
          },
          "onClick": {
            "type": "modal",
            "modalId": "addVehicleModal"
          }
        }
      ]
    }
  ],
  "modals": {
    "addVehicleModal": {
      "title": "Add New Vehicle",
      "layout": {
        "type": "vertical"
      },
      "fields": [
        {
          "name": "registration_number",
          "type": "text",
          "label": "Registration Number",
          "placeholder": "Enter registration number",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter registration number" }]
        },
        {
          "name": "brand",
          "type": "text",
          "label": "Brand",
          "placeholder": "Enter vehicle brand",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter vehicle brand" }]
        },
        {
          "name": "model",
          "type": "text",
          "label": "Model",
          "placeholder": "Enter vehicle model",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter vehicle model" }]
        },
        {
          "name": "status",
          "type": "select",
          "label": "Status",
          "placeholder": "Select status",
          "size": "large",
          "options": [
            { "label": "Available", "value": "available" },
            { "label": "In Use", "value": "in_use" },
            { "label": "Maintenance", "value": "maintenance" }
          ],
          "rules": [{ "required": true, "message": "Please select status" }]
        },
        {
          "name": "seats",
          "type": "number",
          "label": "Seats",
          "placeholder": "Enter number of seats",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter number of seats" }]
        }
      ],
      "actions": [
        {
          "label": "Add Vehicle",
          "buttonProps": {
            "type": "primary",
            "htmlType": "submit",
            "block": true
          },
          "style": {
            "marginTop": "24px"
          },
          "api": {
            "endpoint": "/api/vehicles",
            "method": "POST",
            "route_type": "private"
          },
          "messages": {
            "success": "Vehicle added successfully",
            "failure": "Failed to add vehicle"
          }
        }
      ]
    },
    "editVehicleModal": {
      "title": "Edit Vehicle",
      "layout": {
        "type": "vertical"
      },
      "fields": [
        {
          "name": "registration_number",
          "type": "text",
          "label": "Registration Number",
          "placeholder": "Enter registration number",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter registration number" }]
        },
        {
          "name": "brand",
          "type": "text",
          "label": "Brand",
          "placeholder": "Enter vehicle brand",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter vehicle brand" }]
        },
        {
          "name": "model",
          "type": "text",
          "label": "Model",
          "placeholder": "Enter vehicle model",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter vehicle model" }]
        },
        {
          "name": "status",
          "type": "select",
          "label": "Status",
          "placeholder": "Select status",
          "size": "large",
          "options": [
            { "label": "Available", "value": "available" },
            { "label": "In Use", "value": "in_use" },
            { "label": "Maintenance", "value": "maintenance" }
          ],
          "rules": [{ "required": true, "message": "Please select status" }]
        },
        {
          "name": "seats",
          "type": "number",
          "label": "Seats",
          "placeholder": "Enter number of seats",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter number of seats" }]
        }
      ],
      "actions": [
        {
          "label": "Update Vehicle",
          "buttonProps": {
            "type": "primary",
            "htmlType": "submit",
            "block": true
          },
          "style": {
            "marginTop": "24px"
          },
          "api": {
            "endpoint": "/api/vehicles/{id}",
            "method": "PUT",
            "route_type": "private"
          },
          "messages": {
            "success": "Vehicle updated successfully",
            "failure": "Failed to update vehicle"
          }
        }
      ]
    },
    "deleteVehicleModal": {
      "title": "Delete Vehicle",
      "type": "confirm",
      "content": "Are you sure you want to delete this vehicle? This action cannot be undone.",
      "actions": [
        {
          "label": "Delete",
          "buttonProps": {
            "type": "primary",
            "danger": true
          },
          "api": {
            "endpoint": "/api/vehicles/{id}",
            "method": "DELETE",
            "route_type": "private"
          },
          "messages": {
            "success": "Vehicle deleted successfully",
            "failure": "Failed to delete vehicle"
          }
        }
      ]
    }
  }
}