{
  "title": "Employee Management",
  "layout": {
    "header": {
      "enabled": true,
      "logo": "/images/company-logo.png",
      "style": {
        "background": "#fff",
        "padding": "0 24px",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)",
        "height": "64px",
        "lineHeight": "64px"
      }
    },
    "sidebar": {
      "enabled": true,
      "collapsed": false,
      "width": 256,
      "collapsedWidth": 80,
      "theme": "dark",
      "style": {
        "background": "#001529",
        "boxShadow": "2px 0 8px 0 rgba(29,35,41,.05)"
      },
      "menu": {
        "items": [
          { "key": "dashboard", "label": "Dashboard", "icon": "DashboardOutlined", "path": "/dashboard" },
          {
            "type": "group",
            "label": "Management",
            "children": [
              { "key": "employees", "label": "Employees", "icon": "UserOutlined", "path": "/employees" },
              { "key": "drivers", "label": "Drivers", "icon": "IdcardOutlined", "path": "/drivers" },
              { "key": "vehicles", "label": "Vehicles", "icon": "CarOutlined", "path": "/vehicles" },
              { "key": "trips", "label": "Trips", "icon": "CompassOutlined", "path": "/trips" }
            ]
          },
          {
            "type": "group",
            "label": "Reports",
            "children": [
              { "key": "reports", "label": "Reports", "icon": "BarChartOutlined", "path": "/reports" },
              { "key": "expenses", "label": "Expenses", "icon": "DollarOutlined", "path": "/expenses" },
              { "key": "maintenance", "label": "Maintenance", "icon": "ToolOutlined", "path": "/maintenance" }
            ]
          }
        ]
      },
      "footer": {
        "enabled": true,
        "style": {
          "padding": "16px",
          "background": "rgba(0, 0, 0, 0.25)",
          "color": "#fff",
          "height": "auto",
          "cursor": "pointer"
        },
        "content": {
          "expanded": { 
            "avatar": "/images/user-avatar.png", 
            "name": "John Doe", 
            "role": "Admin" 
          },
          "collapsed": { 
            "avatar": "/images/user-avatar.png" 
          },
          "menu": {
            "items": [
              { "key": "profile", "label": "Profile", "icon": "UserOutlined", "path": "/profile" },
              { "key": "settings", "label": "Settings", "icon": "SettingOutlined", "path": "/settings" },
              { "key": "logout", "label": "Logout", "icon": "LogoutOutlined", "type": "button" }
            ]
          }
        }
      }
    },
    "content": {
      "style": {
        "minHeight": "calc(100vh - 64px)",
        "background": "#f0f2f5",
        "padding": "24px"
      }
    },
    "footer": {
      "enabled": true,
      "text": "Â© 2024 Employee Management System. All rights reserved.",
      "style": {
        "textAlign": "center",
        "padding": "16px",
        "background": "#f7f7f7"
      }
    }
  },
  "sections": [
    {
      "type": "banner",
      "style": {
        "background": "linear-gradient(135deg, #1890ff 0%, #096dd9 100%)",
        "padding": "24px",
        "marginBottom": "24px",
        "borderRadius": "8px"
      },
      "content": {
        "title": "Employee Management",
        "description": "Manage your organization's employees efficiently",
        "style": {
          "maxWidth": "100%",
          "padding": "0 24px",
          "color": "#ffffff"
        }
      }
    },
    {
      "type": "form",
      "containerStyle": { "padding": "0" },
      "wrapperStyle": {
        "background": "#ffffff",
        "padding": "24px",
        "borderRadius": "8px",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)"
      },
      "title": "Employee List",
      "subtitle": "View and manage employees",
      "table": {
        "enabled": true,
        "rowKey": "employee_id",
        "size": "middle",
        "scroll": { "x": true },
        "pagination": {
          "pageSize": 10,
          "showSizeChanger": true,
          "showQuickJumper": true,
          "showTotal": true,
          "pageSizeOptions": [10, 20, 50, 100],
          "position": ["bottomRight"]
        },
        "columns": [
          {
            "title": "Name",
            "dataIndex": "name",
            "key": "name",
            "width": "20%",
            "sorter": true,
            "sortField": "name",
            "fixed": "left",
            "ellipsis": true,
            "searchable": true
          },
          {
            "title": "Email",
            "dataIndex": "email",
            "key": "email",
            "width": "25%",
            "ellipsis": true,
            "searchable": true
          },
          {
            "title": "Role",
            "dataIndex": "role",
            "key": "role",
            "width": "15%",
            "sorter": true,
            "sortField": "role",
            "render": {
              "type": "tag",
              "colorMap": {
                "admin": "gold",
                "employee": "blue"
              }
            },
            "filters": [
              { "text": "Admin", "value": "admin" },
              { "text": "Employee", "value": "employee" }
            ]
          },
          {
            "title": "Phone",
            "dataIndex": "phone",
            "key": "phone",
            "width": "15%",
            "ellipsis": true,
            "searchable": true
          },
          {
            "title": "Created At",
            "dataIndex": "created_at",
            "key": "created_at",
            "width": "15%",
            "sorter": true,
            "sortField": "created_at",
            "render": {
              "type": "datetime",
              "format": "YYYY-MM-DD HH:mm"
            }
          },
          {
            "title": "Actions",
            "key": "actions",
            "width": "10%",
            "fixed": "right",
            "render": {
              "type": "actions",
              "items": [
                {
                  "type": "button",
                  "buttonProps": {
                    "type": "link",
                    "icon": "EditOutlined"
                  },
                  "tooltip": "Edit Employee",
                  "onClick": {
                    "type": "modal",
                    "modalId": "editEmployeeModal"
                  }
                },
                {
                  "type": "button",
                  "buttonProps": {
                    "type": "link",
                    "danger": true,
                    "icon": "DeleteOutlined"
                  },
                  "tooltip": "Delete Employee",
                  "onClick": {
                    "type": "modal",
                    "modalId": "deleteEmployeeModal"
                  }
                }
              ]
            }
          }
        ],
        "api": {
          "endpoint": "/api/employees",
          "method": "GET",
          "params": {
            "page": "{current}",
            "limit": "{pageSize}",
            "sort_by": "{sortField}",
            "sort_order": "{sortOrder}",
            "search": "{searchText}",
            "role": "{filters.role}"
          }
        },
        "searchConfig": {
          "placeholder": "Search employees...",
          "fields": ["name", "email", "phone"],
          "searchOnChange": true,
          "searchDelay": 500
        },
        "toolbarConfig": {
          "settings": {
            "enabled": true,
            "items": ["reload", "density", "fullScreen"]
          },
          "refresh": {
            "enabled": true,
            "tooltip": "Refresh data"
          }
        }
      },
      "actions": [
        {
          "label": "Add Employee",
          "buttonProps": {
            "type": "primary",
            "icon": "PlusOutlined"
          },
          "onClick": {
            "type": "modal",
            "modalId": "addEmployeeModal"
          }
        }
      ]
    }
  ],
  "modals": {
    "addEmployeeModal": {
      "title": "Add New Employee",
      "width": 600,
      "layout": { "type": "vertical" },
      "fields": [
        {
          "name": "name",
          "type": "text",
          "label": "Name",
          "placeholder": "Enter employee name",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter employee name" }]
        },
        {
          "name": "email",
          "type": "email",
          "label": "Email",
          "placeholder": "Enter email address",
          "size": "large",
          "rules": [
            { "required": true, "message": "Please enter email" },
            { "type": "email", "message": "Please enter valid email" }
          ]
        },
        {
          "name": "password",
          "type": "password",
          "label": "Password",
          "placeholder": "Enter password",
          "size": "large",
          "rules": [
            { "required": true, "message": "Please enter password" },
            { "min": 8, "message": "Password must be at least 8 characters" }
          ]
        },
        {
          "name": "role",
          "type": "select",
          "label": "Role",
          "placeholder": "Select role",
          "size": "large",
          "options": [
            { "label": "Admin", "value": "admin" },
            { "label": "Employee", "value": "employee" }
          ],
          "rules": [{ "required": true, "message": "Please select role" }]
        },
        {
          "name": "phone",
          "type": "text",
          "label": "Phone",
          "placeholder": "Enter phone number",
          "size": "large",
          "rules": [
            { "required": true, "message": "Please enter phone number" },
            { "pattern": "^[0-9]{10}$", "message": "Please enter a valid 10-digit phone number" }
          ]
        }
      ],
      "actions": [
        {
          "label": "Cancel",
          "buttonProps": { "type": "default" },
          "onClick": { "type": "close" }
        },
        {
          "label": "Add Employee",
          "buttonProps": { "type": "primary", "htmlType": "submit" },
          "api": {
            "endpoint": "/api/employees/register",
            "method": "POST"
          },
          "messages": {
            "success": "Employee added successfully",
            "error": "Failed to add employee"
          }
        }
      ]
    },
    "editEmployeeModal": {
      "title": "Edit Employee",
      "width": 600,
      "layout": { "type": "vertical" },
      "api": {
        "fetch": {
          "endpoint": "/api/employees/{id}",
          "method": "GET"
        }
      },
      "fields": [
        {
          "name": "name",
          "type": "text",
          "label": "Name",
          "placeholder": "Enter employee name",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter employee name" }]
        },
        {
          "name": "email",
          "type": "email",
          "label": "Email",
          "placeholder": "Enter email address",
          "size": "large",
          "rules": [
            { "required": true, "message": "Please enter email" },
            { "type": "email", "message": "Please enter valid email" }
          ]
        },
        {
          "name": "role",
          "type": "select",
          "label": "Role",
          "placeholder": "Select role",
          "size": "large",
          "options": [
            { "label": "Admin", "value": "admin" },
            { "label": "Employee", "value": "employee" }
          ],
          "rules": [{ "required": true, "message": "Please select role" }]
        },
        {
          "name": "phone",
          "type": "text",
          "label": "Phone",
          "placeholder": "Enter phone number",
          "size": "large",
          "rules": [
            { "required": true, "message": "Please enter phone number" },
            { "pattern": "^[0-9]{10}$", "message": "Please enter a valid 10-digit phone number" }
          ]
        }
      ],
      "actions": [
        {
          "label": "Cancel",
          "buttonProps": { "type": "default" },
          "onClick": { "type": "close" }
        },
        {
          "label": "Update Employee",
          "buttonProps": { "type": "primary", "htmlType": "submit" },
          "api": {
            "endpoint": "/api/employees/{id}",
            "method": "PUT"
          },
          "messages": {
            "success": "Employee updated successfully",
            "error": "Failed to update employee"
          }
        }
      ]
    },
    "deleteEmployeeModal": {
      "title": "Delete Employee",
      "type": "confirm",
      "content": "Are you sure you want to delete this employee? This action cannot be undone.",
      "actions": [
        {
          "label": "Delete",
          "buttonProps": {
            "type": "primary",
            "danger": true
          },
          "api": {
            "endpoint": "/api/employees/{id}",
            "method": "DELETE"
          },
          "messages": {
            "success": "Employee deleted successfully",
            "error": "Failed to delete employee"
          }
        }
      ]
    }
  }
}