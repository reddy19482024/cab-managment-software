{
  "title": "Trip Management",
  "layout": {
    "header": {
      "enabled": true,
      "logo": "/images/company-logo.png",
      "style": {
        "background": "#fff",
        "padding": "0 24px",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)",
        "height": "64px",
        "lineHeight": "64px"
      }
    },
    "sidebar": {
      "enabled": true,
      "collapsed": false,
      "width": 256,
      "collapsedWidth": 80,
      "theme": "dark",
      "style": {
        "background": "#001529",
        "boxShadow": "2px 0 8px 0 rgba(29,35,41,.05)"
      },
      "menu": {
        "items": [
          { "key": "dashboard", "label": "Dashboard", "icon": "DashboardOutlined", "path": "/dashboard" },
          {
            "type": "group",
            "label": "Management",
            "children": [
              { "key": "employees", "label": "Employees", "icon": "UserOutlined", "path": "/employees" },
              { "key": "vehicles", "label": "Vehicles", "icon": "CarOutlined", "path": "/vehicles" },
              { "key": "trips", "label": "Trips", "icon": "CompassOutlined", "path": "/trips" }
            ]
          },
          {
            "type": "group",
            "label": "Reports",
            "children": [
              { "key": "reports", "label": "Reports", "icon": "BarChartOutlined", "path": "/reports" },
              { "key": "expenses", "label": "Expenses", "icon": "DollarOutlined", "path": "/expenses" },
              { "key": "maintenance", "label": "Maintenance", "icon": "ToolOutlined", "path": "/maintenance" }
            ]
          }
        ]
      },
      "footer": {
        "enabled": true,
        "style": {
          "padding": "16px",
          "background": "rgba(0, 0, 0, 0.25)",
          "color": "#fff",
          "height": "auto",
          "cursor": "pointer"
        },
        "content": {
          "expanded": { 
            "avatar": "/images/user-avatar.png", 
            "name": "John Doe", 
            "role": "Admin" 
          },
          "collapsed": { 
            "avatar": "/images/user-avatar.png" 
          },
          "menu": {
            "items": [
              { "key": "profile", "label": "Profile", "icon": "UserOutlined", "path": "/profile" },
              { "key": "settings", "label": "Settings", "icon": "SettingOutlined", "path": "/settings" },
              { "key": "logout", "label": "Logout", "icon": "LogoutOutlined", "type": "button" }
            ]
          }
        }
      }
    },
    "content": {
      "style": {
        "minHeight": "calc(100vh - 64px)",
        "background": "#f0f2f5"
      }
    },
    "footer": {
      "enabled": true,
      "text": "Â© 2024 My Application. All rights reserved.",
      "style": {
        "textAlign": "center",
        "padding": "16px",
        "background": "#f7f7f7"
      },
      "links": [
        { "text": "Privacy Policy", "url": "/privacy" },
        { "text": "Terms", "url": "/terms" }
      ]
    }
  },
  "sections": [
    {
      "type": "banner",
      "style": {
        "background": "#722ed1",
        "padding": "24px",
        "marginBottom": "24px"
      },
      "content": {
        "title": "Trip Management",
        "description": "Manage and track all trips and routes",
        "style": {
          "maxWidth": "100%",
          "padding": "0 24px"
        }
      }
    },
    {
      "type": "form",
      "containerStyle": {
        "padding": "0 24px"
      },
      "wrapperStyle": {
        "background": "#ffffff",
        "padding": "24px",
        "borderRadius": "8px",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.1)"
      },
      "title": "Trip List",
      "subtitle": "View and manage all trips",
      "layout": {
        "type": "vertical"
      },
      "table": {
        "enabled": true,
        "columns": [
          {
            "title": "Trip ID",
            "dataIndex": "trip_id",
            "key": "trip_id",
            "width": "10%"
          },
          {
            "title": "Pickup Location",
            "dataIndex": "pickup_location",
            "key": "pickup_location",
            "width": "15%"
          },
          {
            "title": "Dropoff Location",
            "dataIndex": "dropoff_location",
            "key": "dropoff_location",
            "width": "15%"
          },
          {
            "title": "Start Time",
            "dataIndex": "start_time",
            "key": "start_time",
            "width": "15%"
          },
          {
            "title": "End Time",
            "dataIndex": "end_time",
            "key": "end_time",
            "width": "15%"
          },
          {
            "title": "Status",
            "dataIndex": "status",
            "key": "status",
            "width": "10%",
            "render": {
              "type": "tag",
              "colorMap": {
                "scheduled": "blue",
                "in_progress": "orange",
                "completed": "green",
                "cancelled": "red"
              }
            }
          },
          {
            "title": "Actions",
            "key": "actions",
            "width": "10%",
            "render": {
              "type": "actions",
              "items": [
                {
                  "type": "button",
                  "buttonProps": {
                    "type": "link",
                    "icon": "EditOutlined"
                  },
                  "onClick": {
                    "type": "modal",
                    "modalId": "editTripModal"
                  }
                },
                {
                  "type": "button",
                  "buttonProps": {
                    "type": "link",
                    "danger": true,
                    "icon": "DeleteOutlined"
                  },
                  "onClick": {
                    "type": "modal",
                    "modalId": "deleteTripModal"
                  }
                }
              ]
            }
          }
        ],
        "api": {
          "endpoint": "/api/trips",
          "method": "GET",
          "route_type": "private",
          "transform": {
            "path": "data"
          }
        }
      },
      "actions": [
        {
          "label": "Add Trip",
          "buttonProps": {
            "type": "primary",
            "icon": "PlusOutlined"
          },
          "style": {
            "marginBottom": "16px"
          },
          "onClick": {
            "type": "modal",
            "modalId": "addTripModal"
          }
        }
      ]
    }
  ],
  "modals": {
    "addTripModal": {
      "title": "Schedule New Trip",
      "layout": {
        "type": "vertical"
      },
      "fields": [
        {
          "name": "pickup_location",
          "type": "text",
          "label": "Pickup Location",
          "placeholder": "Enter pickup location",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter pickup location" }]
        },
        {
          "name": "dropoff_location",
          "type": "text",
          "label": "Dropoff Location",
          "placeholder": "Enter dropoff location",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter dropoff location" }]
        },
        {
          "name": "driver_id",
          "type": "select",
          "label": "Driver",
          "placeholder": "Select driver",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select driver" }]
        },
        {
          "name": "vehicle_id",
          "type": "select",
          "label": "Vehicle",
          "placeholder": "Select vehicle",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select vehicle" }]
        },
        {
          "name": "start_time",
          "type": "datetime",
          "label": "Start Time",
          "placeholder": "Select start time",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select start time" }]
        },
        {
          "name": "end_time",
          "type": "datetime",
          "label": "End Time",
          "placeholder": "Select end time",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select end time" }]
        },
        {
          "name": "status",
          "type": "select",
          "label": "Status",
          "placeholder": "Select status",
          "size": "large",
          "options": [
            { "label": "Scheduled", "value": "scheduled" },
            { "label": "In Progress", "value": "in_progress" },
            { "label": "Completed", "value": "completed" },
            { "label": "Cancelled", "value": "cancelled" }
          ],
          "rules": [{ "required": true, "message": "Please select status" }]
        },
        {
          "name": "assigned_employees",
          "type": "select",
          "label": "Assigned Employees",
          "placeholder": "Select employees",
          "mode": "multiple",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select at least one employee" }]
        }
      ],
      "actions": [
        {
          "label": "Schedule Trip",
          "buttonProps": {
            "type": "primary",
            "htmlType": "submit",
            "block": true
          },
          "style": {
            "marginTop": "24px"
          },
          "api": {
            "endpoint": "/api/trips",
            "method": "POST",
            "route_type": "private"
          },
          "messages": {
            "success": "Trip scheduled successfully",
            "failure": "Failed to schedule trip"
          }
        }
      ]
    },
    "editTripModal": {
      "title": "Edit Trip",
      "layout": {
        "type": "vertical"
      },
      "fields": [
        {
          "name": "pickup_location",
          "type": "text",
          "label": "Pickup Location",
          "placeholder": "Enter pickup location",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter pickup location" }]
        },
        {
          "name": "dropoff_location",
          "type": "text",
          "label": "Dropoff Location",
          "placeholder": "Enter dropoff location",
          "size": "large",
          "rules": [{ "required": true, "message": "Please enter dropoff location" }]
        },
        {
          "name": "driver_id",
          "type": "select",
          "label": "Driver",
          "placeholder": "Select driver",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select driver" }]
        },
        {
          "name": "vehicle_id",
          "type": "select",
          "label": "Vehicle",
          "placeholder": "Select vehicle",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select vehicle" }]
        },
        {
          "name": "start_time",
          "type": "datetime",
          "label": "Start Time",
          "placeholder": "Select start time",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select start time" }]
        },
        {
          "name": "end_time",
          "type": "datetime",
          "label": "End Time",
          "placeholder": "Select end time",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select end time" }]
        },
        {
          "name": "status",
          "type": "select",
          "label": "Status",
          "placeholder": "Select status",
          "size": "large",
          "options": [
            { "label": "Scheduled", "value": "scheduled" },
            { "label": "In Progress", "value": "in_progress" },
            { "label": "Completed", "value": "completed" },
            { "label": "Cancelled", "value": "cancelled" }
          ],
          "rules": [{ "required": true, "message": "Please select status" }]
        },
        {
          "name": "assigned_employees",
          "type": "select",
          "label": "Assigned Employees",
          "placeholder": "Select employees",
          "mode": "multiple",
          "size": "large",
          "rules": [{ "required": true, "message": "Please select at least one employee" }]
        }
      ],
      "actions": [
        {
          "label": "Update Trip",
          "buttonProps": {
            "type": "primary",
            "htmlType": "submit",
            "block": true
          },
          "style": {
            "marginTop": "24px"
          },
          "api": {
            "endpoint": "/api/trips/{id}",
            "method": "PUT",
            "route_type": "private"
          },
          "messages": {
            "success": "Trip updated successfully",
            "failure": "Failed to update trip"
          }
        }
      ]
    },
    "deleteTripModal": {
      "title": "Delete Trip",
      "type": "confirm",
      "content": "Are you sure you want to delete this trip? This action cannot be undone.",
      "actions": [
        {
          "label": "Delete",
          "buttonProps": {
            "type": "primary",
            "danger": true
          },
          "api": {
            "endpoint": "/api/trips/{id}",
            "method": "DELETE",
            "route_type": "private"
          },
          "messages": {
            "success": "Trip deleted successfully",
            "failure": "Failed to delete trip"
          }
        }
      ]
    }
  }
}